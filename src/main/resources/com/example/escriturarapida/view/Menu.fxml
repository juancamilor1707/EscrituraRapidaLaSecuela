<VBox fx:id="menu" alignment="CENTER" prefHeight="576.0" prefWidth="655.0" spacing="20.0" styleClass="menu" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.escriturarapida.ControllerMenu">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <ImageView fitHeight="132.0" fitWidth="402.0" layoutX="107.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@Image/menuTitle.png" />
            </image>
         </ImageView>
      </children>
   </AnchorPane>

    <Label alignment="CENTER">
        <font>
            <Font name="Jersey 10 Regular" size="54.0" />
        </font>
    </Label>

    <AnchorPane prefHeight="189.0" prefWidth="615.0">
        <children>
            <Button fx:id="playButton" layoutX="246.0" layoutY="14.0" onAction="#Swap" prefHeight="60.0" prefWidth="124.0" stylesheets="@stylesheet.css" text="Jugar">
                <font>
                    <Font name="Jersey 10 Regular" size="32.0" />
                </font>
            </Button>

            <Button fx:id="helpButton" layoutX="264.0" layoutY="95.0" onAction="#SwapHelp" prefHeight="45.0" prefWidth="89.0" stylesheets="@stylesheet.css" text="Ayuda">
                <font>
                    <Font name="Jersey 10 Regular" size="20.0" />
                </font>
            </Button>
        </children>
    </AnchorPane>
</VBox>
